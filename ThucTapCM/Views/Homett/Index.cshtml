                    <h2>Featured Cars</h2>
                    <a href="cars.html">view more <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @foreach (var item in listPd)
            {
                var url = "/san-pham/" + item.MetaTiltle +"-"+item.MaSP;
